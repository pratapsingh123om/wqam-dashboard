FROM node:20-alpine

WORKDIR /app

# Copy package manifest first for caching
COPY package*.json ./

# Install dependencies
RUN npm ci --silent

# Copy app source
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Start Vite on all interfaces so container can be reached from host
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
